{
  "installCommand": "corepack enable && corepack prepare pnpm@9 --activate && pnpm install",
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    },
    "app/(payload)/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/(payload)/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/admin/index.html"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/admin/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "regions": ["iad1"],
  "framework": "nextjs"
}
